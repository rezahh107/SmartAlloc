<?xml version="1.0"?>
<ruleset name="SmartAlloc">
    <description>SmartAlloc WordPress Plugin Coding Standards</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Exclude some rules that are too strict for our use case -->
    <rule ref="WordPress-Core">
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- Custom rules -->
    <rule ref="PSR2">
        <exclude name="PSR2.Classes.ClassDeclaration"/>
    </rule>

    <!-- File paths to check -->
    <file>src/</file>
    <file>tests/</file>
    <file>smart-alloc.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- Show source codes in all reports -->
    <arg value="s"/>

    <!-- Show sniff codes in all reports -->
    <arg value="n"/>
</ruleset> 